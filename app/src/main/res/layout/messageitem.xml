<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id = "@+id/chattingsecConstraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id = "@+id/Messagingcardview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="35dp"
                android:layout_marginHorizontal="10dp"
                >

                    <ImageView
                        android:id="@+id/chattingimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account_circle"/>


            </androidx.cardview.widget.CardView>
        
        <TextView
            android:id = "@+id/chattingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:padding="10dp"
            android:text="fbsgvdsvdsbsdbdccxcc"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/chatmessagebackground"



            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>